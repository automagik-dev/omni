# =============================================================================
# Omni v2 Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:8432/omni

# Set to true to have PM2 manage pgserve (local dev)
PGSERVE_MANAGED=true
PGSERVE_PORT=8432
PGSERVE_DATA=./.pgserve-data

# -----------------------------------------------------------------------------
# NATS (Event Bus)
# -----------------------------------------------------------------------------
NATS_URL=nats://localhost:4222

# Set to true to have PM2 manage nats-server (local dev)
NATS_MANAGED=true
NATS_PORT=4222

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_PORT=8882
API_HOST=0.0.0.0

# Set to true to have PM2 manage the API server (local dev)
API_MANAGED=true

# -----------------------------------------------------------------------------
# Secrets (add as needed)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
