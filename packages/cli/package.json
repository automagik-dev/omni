{
  "name": "@omni/cli",
  "version": "0.0.1",
  "description": "LLM-optimized CLI for Omni v2",
  "type": "module",
  "bin": {
    "omni": "./bin/omni"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "echo 'CLI package - no dev server (use: bun run ./src/index.ts <command>)'",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:integration": "RUN_INTEGRATION_TESTS=1 bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@omni/core": "workspace:*",
    "@omni/sdk": "workspace:*",
    "chalk": "^5.4.0",
    "commander": "^13.1.0",
    "ora": "^8.1.1",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.3",
    "@types/qrcode-terminal": "^0.12.2",
    "typescript": "^5.7.3"
  }
}
